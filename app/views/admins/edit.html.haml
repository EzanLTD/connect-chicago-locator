= link_to "< back to admins", admins_path

%h2 Edit admin
= semantic_form_for @admin do |f|
  = f.semantic_errors
  = f.inputs do
    = f.input :email, hint:"Email address"
  = f.buttons do
    = f.commit_button :button_html => {:class => "btn btn-primary", :value => "Save"}
    
= button_to "Delete", admin_path(@admin), :method=>:delete, :class => "btn btn-danger"
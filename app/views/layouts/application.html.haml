!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Tech Locator"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"
    = content_for :stylesheets
    
    /%link(href="images/favicon.ico" rel="shortcut icon")

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand(href="/") Tech Locator
          
          / .container.nav-collapse
          /   %ul.nav.pull-right
          /     - if admin_signed_in?
          /       - if current_admin.try(:superadmin?)
          /         %li
          /           = link_to('Manage admins', admin_index_path)
          /       %li
          /         = link_to('Edit your account', edit_admin_registration_path)
          /       %li
          /         = link_to('Logout', destroy_admin_session_path, :method => :delete)        
          /     - else
          /       %li
          /         = link_to('Admin login', new_admin_session_path)


    .container

      .content
        - flash.each do |name, msg|
          %div#flash{:class => "alert alert-#{name == :notice ? "success" : "error"}"}
            %a.close{"data-dismiss" => "alert"} &#215;
            = content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String)
        = yield
    
      %footer
        %p.pull-right
          Website by 
          %a{:href => "http://derekeder.com", :title => "Derek Eder"} Derek Eder
          2012
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
    = content_for :javascripts
    
    = javascript_include_tag "analytics_lib" if Rails.env.production?
